@model Test.Models.GenerateBarcodeModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "CreateBarcode";
}


<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center mb-4">Generate Barcode</h3>
            <form asp-action="CreateBarcode" autocomplete="off" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="BarcodeText" class="control-label"></label>
                        <input asp-for="BarcodeText" class="form-control" style="border-color: #808080b0;" />
                        <span asp-validation-for="BarcodeText" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <img src="@ViewBag.QrCodeUri" class="img-thumbnail" />
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card-body text-center py-3">
                        <input type="submit" value="Generate Barcode" class="btn btn-info btn-lg"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>